                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="와퍼 셋트"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/re_mac8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:src="@drawable/re_mac8"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="와퍼 셋트"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/re_mac9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:src="@drawable/re_mac9"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="와퍼 셋트"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>





            <!-- sub box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="horizontal"
                >

                <!-- left button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/re_left"
                        android:background="#ffffff"/>

                </LinearLayout>
                <!-- submenu content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <!-- one menu box -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/menubox">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/re_mac2"/>

                        <!-- count button -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            >

                            <ImageButton
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/re_minus"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="1"/>

                            <ImageButton
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/re_plus"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- right button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/re_right"
                        android:background="#ffffff"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <!--2box-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#ffffff"
            >

            <!-- cashe box-->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#ffffff"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    android:layout_rowWeight="2"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_blank"
                    android:textColor="@color/black"
                    android:text="0 원"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    android:layout_rowWeight="2"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_blank"
                    android:textColor="@color/black"
                    android:text="전체 취소"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:layout_gravity="fill_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_patter"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="결제" />

            </GridLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>