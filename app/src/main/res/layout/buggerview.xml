<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:gravity="fill_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mac1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bugger name"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버거 / 사이드 프라이 / 드링크"
                android:textSize="15dp" />

        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_box_oren_fill"
                android:textColor="#FFFFFF"
                android:paddingLeft="15dp"
                android:textSize="25dp"
                android:text="음료"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/drink_cola"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren_fill"
                    android:textColor="@color/white"
                    android:text="코카 콜라"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/drink_cider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren"
                    android:textColor="@color/oren"
                    android:text="사이다"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/drink_milk_shake"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren"
                    android:textColor="@color/oren"
                    android:text="밀크 쉐이크\n+1000"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_box_oren_fill"
                android:textColor="#FFFFFF"
                android:paddingLeft="15dp"
                android:textSize="25dp"
                android:text="사이드 메뉴 사이즈"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/side_small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren_fill"
                    android:textColor="@color/white"
                    android:text="small"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/side_mideum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren"
                    android:textColor="@color/oren"
                    android:text="mideum\n+500"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/side_large"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren"
                    android:textColor="@color/oren"
                    android:text="Large\n+1000"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_box_oren_fill"
                android:textColor="#FFFFFF"
                android:paddingLeft="15dp"
                android:textSize="25dp"
                android:text="추가 토핑"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/topping_cheese"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren"
                    android:textColor="@color/oren"
                    android:text="치즈\n+800"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/topping_bacon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren"
                    android:textColor="@color/oren"
                    android:text="베이컨\n+1000"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/topping_patty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren"
                    android:textColor="@color/oren"
                    android:text="버거 패티\n+1200"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/topping_hash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/menu_box_oren"
                    android:textColor="@color/oren"
                    android:text="해쉬 브라운\n+1200"/>

            </LinearLayout>
        </LinearLayout>

